#!/bin/sh

while true; do
  echo "Starting python-mgw ... \r\n"

  # Save log to microSD
  python /usr/lib/python3.9/site-packages/mgwp/mgwp.pyc > /mnt/mmcblk0p1/mgwp.log 2>/mnt/mmcblk0p1/mgwp_error.log

  # Kill all python process, before starting new
  killall python

  # Set LED status, R=1, G=0
  mraa-gpio set 33 1
  mraa-gpio set 15 0

  sleep 10
done